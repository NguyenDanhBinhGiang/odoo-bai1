<?xml version="1.0" encoding="utf-8"?>
<odoo>
     <record id="sale_order_view_search_inherit_quotationfghfgh" model="ir.ui.view">
            <field name="name">sale.order.search.inherit.quotation</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.sale_order_view_search_inherit_quotation"/>
            <field name="arch" type="xml">
                <xpath expr="//filter[@name='filter_create_date']" position="after">
                    <field name="discount_code"/>
                    <separator/>
                    <filter string="Special Order" name="special_order" domain="[('discount_code','!=',False)]"/>
                </xpath>
            </field>
        </record>

    <record id="res_users_view_form_simple_modif" model="ir.ui.view">
        <field name="name">Sale</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='tax_totals_json']" position="before">
                <field name="amount_discounted"/>
            </xpath>
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="discount_code"/>
            </xpath>
        </field>
    </record>


</odoo>
