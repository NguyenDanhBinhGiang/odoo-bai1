<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
    <record id='mass_update_customer_form' model='ir.ui.view'>
        <field name='name'>Mass update customers form</field>
        <field name='model'>customer.wizard</field>
        <field name='arch' type='xml'>
            <form string="Update Customers">
                <sheet>
                    <group>
                        <field name='customer_ids'/>
                    </group>
                    <group>
                        <field name='discount_code'/>
                    </group>
                </sheet>
                <footer>
                    <button string='Update'
                            type='object'
                            name='update_customers'
                            class='btn-primary'/>
                    <button string='Cancel'
                            class='btn-default'
                            special='cancel'/>
                </footer>
            </form>
        </field>
    </record>
    </data>
</odoo>